pipeline{
    agent any
    stages {
        stage ('checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/nyfane/Terraform_three_tier_architecture.git'
            }
        }
        stage ('terraform init') {
            steps {
                sh ('terraform init')
            }
        }
        stage ('terraform plan') {
            steps {
                sh ( 'terraform plan')
            }
        }
        stage ('terraform Action') {
            steps {
                echo " Terraform action is---> ${action}"
                sh ('terraform ${action} --auto-approve')
            }
        }
    }
}